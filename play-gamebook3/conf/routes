# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET           /                    controllers.GamebookController.index()
GET           /                controllers.GamebookController.listAllBooks()
POST          /gamebook            controllers.GamebookController.createGamebook()
GET           /gamebook/:id        controllers.GamebookController.getGamebook(id: Long)
PUT           /gamebook/:id        controllers.GamebookController.updateGamebook(id: Long)
DELETE        /gamebook/:id        controllers.GamebookController.deleteGamebook(id: Long)


# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)
